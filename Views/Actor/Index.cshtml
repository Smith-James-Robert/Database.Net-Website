@model IEnumerable<JS2247A5.Models.ActorBaseViewModel>
@{
    var userAccount = new JS2247A5.Controllers.RequestUser
(User as System.Security.Claims.ClaimsPrincipal);
}
@{
    ViewBag.Title = "Index";
}

<h2>Actor List</h2>

@if (userAccount.HasRoleClaim("Executive"))
{
    @Html.ActionLink("Create New", "Create")

}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlternativeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Height)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Executive)
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.AlternativeName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                <img src=@item.ImageUrl height="100" width="100">

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Executive)
            </td>

            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
