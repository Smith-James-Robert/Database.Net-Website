@model JS2247A5.Models.ShowWithDetailViewModel
@{
    var userAccount = new JS2247A5.Controllers.RequestUser
(User as System.Security.Claims.ClaimsPrincipal);
}
@{
    ViewBag.Title = "Details";
}

<h2>@Html.DisplayFor(model => model.Name)</h2>

<div>
    <h4></h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>

        <dd class="col-sm-10">
            <img src=@Model.ImageUrl width="150" height="150">
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Coordinator)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Coordinator)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Actors)
            <br />
            <span class="badge rounded-pill bg-secondary">
                @Model.Actors.Count() Actor(s)
            </span>
        </dt>

        <dd class="col-sm-10">
            @foreach (var track in Model.Actors)
            {
                <span>
                    <br />
                    @Html.DisplayFor(t => track.Name)
                </span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Episodes)
            <br />
            <span class="badge rounded-pill bg-secondary">
                @Model.Episodes.Count() Episode(s)
            </span>
            <span class="badge badge-secondary">Secondary</span>
        </dt>

        <dd class="col-sm-10">
            @foreach (var track in Model.Episodes)
            {
                <span>
                    <br />
                    @Html.DisplayFor(e => track.Name)
                </span>
            }
        </dd>
        @if (!string.IsNullOrWhiteSpace(Model.Premise))
        {
            <dt>
                @Html.DisplayNameFor(model => model.Premise)
            </dt>

            <dd>
                <div class="card">
                    <div class="panel panel-default panel-body">
                        @Html.Raw(Model.Premise)
                    </div>
                </div>
            </dd>
        }
    </dl>
</div>
<p>
    @if (userAccount.HasRoleClaim("Clerk"))
    {
        @Html.ActionLink("Add New Episode", "AddEpisode", new { id = Model.Id })
}
    | @Html.ActionLink("Back to List", "Index")
    </>
