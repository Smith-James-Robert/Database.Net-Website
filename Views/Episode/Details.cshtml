@model JS2247A5.Models.EpisodeBaseViewModel

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShowName)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShowName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SeasonNumber)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeasonNumber)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EpisodeNumber)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EpisodeNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GenreName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GenreName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AirDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AirDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            <img src=@Model.ImageUrl max-width="150" height="150">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Clerk)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Clerk)
        </dd>
        @if (!string.IsNullOrWhiteSpace(Model.Premise))
        {
            <dt>
                @Html.DisplayNameFor(model => model.Premise)
            </dt>

            <dd>
                <div class="card">
                    <div class="panel panel-default panel-body">
                        @Html.Raw(Model.Premise)
                    </div>
                </div>
            </dd>
        }
        @if (!string.IsNullOrEmpty(Model.VideoContentType))
        {
        <dt class="col-sm-2">
            Video
        </dt>
        <dd class="col-sm-10">
            <video controls src=@Url.Action("GetVideo", Model.Id) width="480"></video>
        </dd>
        }



    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
